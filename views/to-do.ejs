<script>
  // Inisialisasi Datepicker
  $("#datepicker").datepicker({
    format: "yyyy-mm-dd",
    autoclose: true,
  });

  // Inisialisasi Timepicker untuk Jam Mulai
  //   $("#startTime").timepicker({
  //     // showMeridian: false, // Ubah ini menjadi false untuk format 24 jam
  //     // defaultTime: false,
  //     use24hours: true,
  //     format: "HH:mm",
  //   });

  $("#startTime").timepicker({
    timeFormat: "HH:mm",

    interval: 1,

    minTime: "00:00",

    maxTime: "23:59",

    defaultTime: "0",

    startTime: "00:00",

    dynamic: false,

    dropdown: true,

    scrollbar: true,
  });

  // Inisialisasi Timepicker untuk Jam Selesai
  //   $("#endTime").timepicker({
  //     // showMeridian: false, // Ubah ini menjadi false untuk format 24 jam
  //     // defaultTime: false,
  //     format: "HH:mm",
  //     use24hours: true,
  //   });

  $("#endTime").timepicker({
    timeFormat: "HH:mm",

    interval: 1,

    minTime: "00:00",

    maxTime: "23:59",

    defaultTime: "0",

    startTime: "00:00",

    dynamic: false,

    dropdown: true,

    scrollbar: true,
  });
</script>

